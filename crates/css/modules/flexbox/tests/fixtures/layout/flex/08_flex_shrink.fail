<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Flex Shrink</title>
  <style>
    html, body { margin: 0; padding: 0; }
    #container { display: flex; }
    /* Each flex item base 300px; shrink equally to fit container */
    #a, #b, #c { flex: 0 1 300px; height: 20px; background: rgb(240,240,240); }
    #a { background: rgb(230,230,255); }
    #b { background: rgb(230,255,230); }
    #c { background: rgb(255,230,230); }
    .spacer { height: 1200px; }
  </style>
</head>

  <!-- : awaiting layout parity -->
  <div id="container">
    <div id="a"></div>
    <div id="b"></div>
    <div id="c"></div>
  </div>
  <div class="spacer"></div>
</body>
</html>

